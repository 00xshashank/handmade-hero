{
    "tasks": [
        {
            "taskLabel": "task-CppProperties",
            "appliesTo": "CppProperties.json",
            "type": "launch"
        },
        {
            "contextType": "build",
            "taskLabel": "Build src/main.cpp",
            "appliesTo": "src/main.cpp",
            "type": "default",
            "command": "cl.exe",
            "args": [
                "/Zi", 
                "/EHsc", 
                "/Fe:main.exe",
                "..\\src\\main.cpp"
            ],
            "workingDirectory": "${workspaceFolder}",
            "problemMatcher": "$msCompile"
        }
    ],
    "version": "0.2.1"
}